<div class="row">
    <div class="col-sm-6 col-md-6 offset-md-3 offset-sm-3 mt-4 text-center">
        <div id="success" class="alert alert-success {{#if noMessages}}d-none{{/if}}">
            {{ successMsg }}
        </div>
    </div>
</div>
<div class="row">
{{# each product }}
    {{# each this }}
    <div class="col-lg-3 col-md-6">
        <div class="card">
            <img src="{{ this.imagePath }}" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">{{ this.title }}</h5>
                <p class="card-text">{{ this.description }}</p>
                <p class="price float-left">{{ this.price }}$</p>
                <a href="/add-to-cart/{{ this._id }}" class="btn btn-success float-right">Add to Cart</a>
            </div>
        </div>
    </div>
    {{/each}}
{{/each}}

</div>

